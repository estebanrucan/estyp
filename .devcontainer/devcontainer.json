{
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"usernamehw.errorlens",
				"ms-vscode.makefile-tools",
				"eamodio.gitlens"
			]
		}
	},
	"postCreateCommand": "pip install build twine ipython pytest=7.4.0 pylint scikit-learn-extra==0.2.0"
}